.modal.fade#modal_signup{tabindex: "-1", role: "dialog", "aria-labelledby"=> "Daftar", "aria-hidden"=> "true"}
  .modal-dialog
    .modal-content
      .modal-header
        / %button.close{type: "button", "data-dismiss" => "modal", "aria-label"=> "Close"}
        /   %span{"aria-hidden"=> "true"} &times;
        %h3.modal-title#modal_label_signup
          %i.fa.fa-fw.fa-user-md
          %span Daftar
      .modal-body
        %h5 Silahkan lengkapi data di bawah ini
        = form_for :sign_up, remote: true, html: {class: "form-horizontal", id: "frm_sign_up"} do |f|
          .form-group
            = f.label :username, "Email" ,class: "col-sm-2 control-label"
            .col-sm-10
              = f.email_field :username, class: "form-control", id: "username", placeholder: "Username"
          .form-group
            = f.label :password, "Password", class: "col-sm-2 control-label"
            .col-sm-10
              = f.password_field :password, class: "form-control", id: "password", placeholder: "Password"
      .modal-footer
        %button.btn.btn-default
          %i.fa.fa-chevron-up.fa-fw
          %span Daftar
        %button.btn.btn-default{"data-dismiss"=> "modal"}
          %i.fa-close.fa.fa-fw
          %span Close